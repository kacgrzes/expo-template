{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "jsx": "react-native",
    "paths": {
      "@/*": ["./src/*", "./src/modules/*"],
      "packageJson": ["./package.json"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "extends": "expo/tsconfig.base",
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [
    ".eslintrc.js",
    ".expo",
    ".husky",
    "android",
    "assets",
    "babel.config.js",
    "dist",
    "ios",
    "metro.config.js",
    "node_modules",
    "patches",
    "templates"
  ]
}
